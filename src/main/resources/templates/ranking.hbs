
{{#partial "contenido" }}
    <div class="header-container">
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/estiloRank.css">
    </div>
        <header>
            <div class="header-container">
                <h1> Rankings </h1>
                <nav>
                    <ul>
                        <li>
                            <i class='bx bx-question-mark'></i>
                             <a href="/faq"> FAQ </a>
                        </li>
                        <li> 
                            <i class='bx bxs-file-doc'></i>
