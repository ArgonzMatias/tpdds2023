                            <i class='bx bxs-home-alt-2'></i>
                            <a href="/incidentes"> Incidentes </a>
                        </li>
                    </ul>
                </nav>
                    
            </div>
        </header>
        <div class="main-container">
            <div class = "Rankings_Opciones">
                <label for="criterio_elegido" class ="criterio_elegido"> Criterio de Ranking </label>
                <select id="rankingCriteria" onchange="checkRankingCriteria()"> 
                    <option value="rank1"> Entidades con cierres mas lentos  </option>
                    <option value="rank2"> Entidades mas reportados </option>
                    <option value="rank3"> Problematicas con mayor impacto </option>
                </select>
                
            </div>
            
        </div>

        <div class="ranking-container">
            <h2 id="rankingTitle"> Titulo Ranking </h2>
            <iframe id="pdfViewer" width="100%" height="600" frameborder="0"></iframe>
        </div> 

    </body>
</html>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.9.359/pdf.min.js"></script>

    <script>
        function checkRankingCriteria() {
            const selectElement = document.getElementById("rankingCriteria");
            const selectedValue = selectElement.value;
        
            if (selectedValue === "rank1") {
                rankingTitle.textContent = "Entidades que mas tardaron en cerrar sus incidentes";
                pdfViewer.src = '/img/ranking_promedio_tiempo.pdf'; //completar
                
            } else if (selectedValue === "rank2") {
                rankingTitle.textContent = "Entidades con mas reportes de incidentes";
                pdfViewer.src = '/img/ranking_mas_incidentes.pdf'; //completar
            } else if (selectedValue === "rank3") {
                rankingTitle.textContent = "Incidentes con mayor impacto sobre usuarios";
                pdfViewer.src = "/img/ranking_impacto_mas_alto.pdf"; //completar
            }
        }
        
        
    </script>
    <script>

    let sideBar = document.querySelector(".sideBar");
    let sidebarBtn = document.querySelector(".bx-menu");
    let homeSection = document.querySelector(".home-section");
    console.log(sideBar);

    sidebarBtn.addEventListener("click", ()=>{
        sideBar.classList.toggle("close")
        homeSection.classList.toggle("close");
